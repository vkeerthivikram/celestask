# Development Dockerfile for Next.js
FROM node:22-alpine

WORKDIR /app

# Install dependencies only when needed
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source files
COPY . .

# Expose port
EXPOSE 12096

ENV PORT=12096
ENV HOSTNAME="0.0.0.0"

# Start dev server
CMD ["npm", "run", "dev"]
